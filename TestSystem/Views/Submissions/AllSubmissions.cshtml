@model IEnumerable<TestSystem.Models.Submission>
@using TestSystem.Models
@using TestSystem.Data
@inject ApplicationDbContext DbContext

@{
    ViewData["Title"] = "Все посылки";
}

<h2>Все посылки</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Пользователь</th>
        <th>Задача</th>
        <th>Дата</th>
        <th>Язык</th>
        <th>Код</th>
        <th>Статус</th>
        <th>Тесты</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        var userProfile = DbContext.UserProfiles
            .FirstOrDefault(up => up.UserId == s.UserId);

        <tr>
            <td>
                @if (userProfile != null)
                {
                    <text>@userProfile.FirstName @userProfile.LastName (@s.User.UserName)</text>
                }
                else
                {
                    <text>@s.User.UserName</text>
                }
            </td>
            <td>@(s.Objective?.Title ?? "Задача #" + s.ObjectiveId)</td>
            <td>@(s.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss"))</td>
            <td>@Html.DisplayFor(m => s.Language)</td>
            <td style="max-width:400px;">
                <button class="btn btn-sm btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#codeModal"
                        data-code="@Html.Raw(Html.Encode(s.Code))"
                        data-language="@s.Language">
                    Показать код
                </button>
                <div class="mt-1 small text-muted">
                    @(s.Code.Length > 100 ? s.Code.Substring(0, 100) + "..." : s.Code)
                </div>
            </td>
            <td>
                @switch (s.Status)
                {
                    case SubmissionStatus.Pending:
                        <span class="badge bg-warning">Ожидание</span>;
                        break;
                    case SubmissionStatus.Accepted:
                        <span class="badge bg-success">Принято</span>;
                        break;
                    case SubmissionStatus.WrongAnswer:
                        <span class="badge bg-danger">Неверный ответ</span>;
                        break;
                    case SubmissionStatus.CompilationError:
                        <span class="badge bg-secondary">Ошибка компиляции</span>;
                        break;
                    case SubmissionStatus.RuntimeError:
                        <span class="badge bg-dark text-white">Ошибка выполнения</span>;
                        break;
                    case SubmissionStatus.Running:
                        <span class="badge bg-warning">Тестируется</span>;
                        break;
                    default:
                        <span class="badge bg-light text-dark">@s.Status.ToString()</span>;
                        break;
                }
            </td>
            <td>@s.PassedTests / @s.TotalTests</td>
        </tr>
    }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Нет данных о посылках
    </div>
}

<div class="modal fade" id="codeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Код решения</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <pre style="margin:0;"><code class="language-" id="modalCode"></code></pre>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var codeModal = document.getElementById('codeModal');
            
            codeModal.addEventListener('shown.bs.modal', function (event) {
                var button = event.relatedTarget;
                var code = button.getAttribute('data-code');
                var language = button.getAttribute('data-language');
                var langClass = getLanguageClass(language);

                var modalBody = document.querySelector('#codeModal .modal-body');
                
                modalBody.innerHTML = 
                    '<pre style="margin:0;">' +
                    '<code class="language-' + langClass + '" id="modalCode">' + 
                    code + 
                    '</code></pre>';

                var modalCode = document.getElementById('modalCode');
                hljs.highlightElement(modalCode);
            });

            function getLanguageClass(language) {
                if (!language) return 'plaintext';
                var lang = language.toLowerCase();
                if (lang === 'python') return 'python';
                if (lang === 'csharp' || lang === 'c#') return 'csharp';
                if (lang === 'java') return 'java';
                if (lang === 'javascript' || lang === 'js') return 'javascript';
                if (lang === 'cpp' || lang === 'c++') return 'cpp';
                if (lang === 'c') return 'c';
                return 'plaintext';
            }
        });
    </script>
}