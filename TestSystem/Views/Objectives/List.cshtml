@model IEnumerable<TestSystem.Models.Objective>

@{
    int counter = 1;
}

<h2>Список задач</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Название</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td>@counter</td>
            <td>@obj.Title</td>
            <td>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@obj.Id">Просмотр</a>
                <a class="btn btn-success" asp-controller="Submissions" asp-action="Create" asp-route-taskId="@obj.Id">Отправить решение</a>
                @if (User.IsInRole("Admin") || User.IsInRole("TaskCreator"))
                {
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@obj.Id">Редактировать</a>
                }
            </td>
        </tr>
        counter++;
    }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">← Назад</a>
