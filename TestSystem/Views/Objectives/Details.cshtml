@model Objective

<h2>@Model.Title</h2>

<p>@Model.Description</p>

<h4>Примеры</h4>

@foreach (var t in Model.Tests.Where(t => !t.IsHidden))
{
    <div class="border p-2 mb-2">
        <b>Input:</b>
        <pre><code class="language-plaintext">@t.Input</code></pre>

        <b>Output:</b>
        <pre><code class="language-plaintext">@t.ExpectedOutput</code></pre>
    </div>
}

<a class="btn btn-primary" href="/Submissions/Create?taskId=@Model.Id">Отправить решение</a>
<br/>
<br/>
<a class="btn btn-secondary" asp-action="List">← Назад к списку</a>

@functions {
    public string GetLanguageClass(string language)
    {
        return language?.ToLower() switch
        {
            "python" => "python",
            "csharp" or "c#" => "csharp",
            "java" => "java",
            "javascript" or "js" => "javascript",
            "cpp" or "c++" => "cpp",
            "c" => "c",
            _ => "plaintext"
        };
    }
}