@using TestSystem.Models.ViewModels
@model IEnumerable<UserWithProfileViewModel>

@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>Управление пользователями</h2>
        <div>
            <span class="badge bg-primary fs-6">
                <i class="fas fa-user me-1"></i>@Model.Count() пользователей
            </span>
            <span class="badge bg-success fs-6 ms-2">
                <i class="fas fa-check-circle me-1"></i>@Model.Count(u => u.HasProfile) с профилями
            </span>
        </div>
    </div>

    <!-- Карточка с таблицей -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Список пользователей</h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" id="searchInput" class="form-control" placeholder="Поиск по email, имени, фамилии...">
                        <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Пользователи не найдены</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0" id="usersTable">
                        <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-envelope me-1"></i>Email</th>
                            <th><i class="fas fa-user me-1"></i>Имя</th>
                            <th><i class="fas fa-user me-1"></i>Фамилия</th>
                            <th><i class="fas fa-phone me-1"></i>Телефон</th>
                            <th><i class="fas fa-calendar-alt me-1"></i>Дата регистрации</th>
                            <th><i class="fas fa-shield-alt me-1"></i>Статус</th>
                            <th><i class="fas fa-cog me-1"></i>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle text-muted me-2"></i>
                                        <div>
                                            <div class="fw-bold">@user.Email</div>
                                            <small class="text-muted">@user.UserName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                    {
                                        <span class="badge bg-info">@user.PhoneNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Не указан</span>
                                    }
                                </td>
                                <td>
                                    @if (user.CreatedAt > DateTime.MinValue)
                                    {
                                        <span class="badge bg-light text-dark">
                                                <i class="fas fa-clock me-1"></i>
                                            @user.CreatedAt.ToString("dd.MM.yyyy")
                                            </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Не указана</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Подтвержден
                                                </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Не подтвержден
                                                </span>
                                        }
                                        @if (user.HasProfile)
                                        {
                                            <span class="badge bg-primary">
                                                    <i class="fas fa-id-card me-1"></i>Профиль
                                                </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="UserDetails" asp-route-id="@user.Id"
                                           class="btn btn-outline-primary" title="Подробнее">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="btn btn-outline-secondary"
                                                title="Редактировать"
                                                onclick="editUser('@user.Id')">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-outline-danger"
                                                title="Удалить"
                                                onclick="confirmDelete('@user.Id', '@user.Email')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Модальное окно подтверждения удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подтверждение удаления</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Вы уверены, что хотите удалить пользователя <strong id="userEmail"></strong>?</p>
                <p class="text-danger"><small>Это действие нельзя отменить.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Удалить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Поиск по таблице
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#usersTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });
        });

        // Очистка поиска
        document.getElementById('clearSearch').addEventListener('click', function() {
            document.getElementById('searchInput').value = '';
            const rows = document.querySelectorAll('#usersTable tbody tr');
            rows.forEach(row => row.style.display = '');
        });

        // Подтверждение удаления
        let userIdToDelete = null;

        function confirmDelete(userId, userEmail) {
            userIdToDelete = userId;
            document.getElementById('userEmail').textContent = userEmail;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (userIdToDelete) {
                // Здесь можно добавить AJAX запрос для удаления пользователя
                console.log('Удаление пользователя:', userIdToDelete);
                // window.location.href = '@Url.Action("DeleteUser", "Admin")?id=' + userIdToDelete;

                // Закрываем модальное окно
                bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                userIdToDelete = null;
            }
        });

        function editUser(userId) {
            // Реализация редактирования пользователя
            console.log('Редактирование пользователя:', userId);
            // window.location.href = '@Url.Action("EditUser", "Admin")?id=' + userId;
        }
    </script>

    <style>
        .table th {
            border-top: none;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
            transform: translateY(-1px);
            transition: all 0.2s;
        }

        .badge {
            font-size: 0.75rem;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        .card-header {
            border-bottom: 1px solid rgba(0,0,0,.125);
        }
    </style>
}